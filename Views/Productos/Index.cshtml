@model IEnumerable<Producto>
@{
    ViewData["Title"] = "Catálogo de Productos";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar de Filtros -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-header">
                    <h5>Filtros</h5>
                </div>
                <div class="card-body">
                    <form method="get" class="mb-3">
                        <div class="form-group">
                            <label>Buscar:</label>
                            <input type="text" name="busqueda" class="form-control" value="@Context.Request.Query["busqueda"]" placeholder="Nombre o descripción...">
                        </div>
                        
                        <div class="form-group mt-3">
                            <label>Categoría:</label>
                            <select name="categoria" class="form-control">
                                <option value="">Todas las categorías</option>
                                @foreach (var categoria in ViewData["Categorias"] as List<string> ?? new List<string>())
                                {
                                    <option value="@categoria" selected="@(Context.Request.Query["categoria"] == categoria)">@categoria</option>
                                }
                            </select>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100 mt-3">Aplicar Filtros</button>
                        <a href="@Url.Action("Index")" class="btn btn-outline-secondary w-100 mt-2">Limpiar</a>
                    </form>
                </div>
            </div>

            @if (User.IsInRole("vendedor") || User.IsInRole("admin"))
            {
                <div class="mt-3">
                    <a href="@Url.Action("Create")" class="btn btn-success w-100">
                        <i class="fas fa-plus"></i> Agregar Producto
                    </a>
                </div>
            }
        </div>

        <!-- Lista de Productos -->
        <div class="col-md-9">
            <h2>Catálogo de Productos</h2>
            
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <div class="row">
                @foreach (var producto in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            @if (!string.IsNullOrEmpty(producto.ImagenUrl))
                            {
                                <img src="@producto.ImagenUrl" class="card-img-top" alt="@producto.Nombre" style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                    <i class="fas fa-image fa-3x text-muted"></i>
                                </div>
                            }
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@producto.Nombre</h5>
                                <p class="card-text flex-grow-1">@producto.Descripcion</p>
                                <div class="mt-auto">
                                    <p class="card-text">
                                        <strong class="text-primary">$@producto.Precio.ToString("N2")</strong>
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">Stock: @producto.Stock</small>
                                    </p>
                                    <p class="card-text">
                                        <span class="badge bg-info">@producto.Categoria</span>
                                    </p>
                                </div>
                            </div>
                            
                            <div class="card-footer">
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", new { id = producto.Id })" class="btn btn-outline-primary">
                                        <i class="fas fa-eye"></i> Ver Detalles
                                    </a>
                                    
                                    @if (User.Identity.IsAuthenticated)
                                    {
                                        <form method="post" action="@Url.Action("AgregarAlCarrito", "Carrito")" class="d-grid">
                                            <input type="hidden" name="productoId" value="@producto.Id" />
                                            <input type="hidden" name="cantidad" value="1" />
                                            <button type="submit" class="btn btn-success">
                                                <i class="fas fa-cart-plus"></i> Agregar al Carrito
                                            </button>
                                        </form>
                                    }
                                    
                                    @if (User.IsInRole("vendedor") || User.IsInRole("admin"))
                                    {
                                        <div class="btn-group w-100">
                                            <a href="@Url.Action("Edit", new { id = producto.Id })" class="btn btn-warning btn-sm">
                                                <i class="fas fa-edit"></i> Editar
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-search fa-3x text-muted mb-3"></i>
                    <h4>No se encontraron productos</h4>
                    <p class="text-muted">Intenta con otros filtros o términos de búsqueda.</p>
                </div>
            }
        </div>
    </div>
</div>