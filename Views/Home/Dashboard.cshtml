@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 bg-light sidebar">
            <div class="text-center my-4">
                @if (!string.IsNullOrEmpty(ViewData["UserPhoto"] as string))
                {
                    <img src="@ViewData["UserPhoto"]" class="rounded-circle" width="80" height="80" alt="Foto perfil">
                }
                else
                {
                    <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                        <span class="text-white fw-bold fs-4">@ViewData["UserName"]?.ToString()[0]</span>
                    </div>
                }
                <h5 class="mt-2">@ViewData["UserName"]</h5>
                <p class="text-muted">@ViewData["UserEmail"]</p>
                <span class="badge bg-info">@ViewData["UserRole"]</span>
            </div>
            
            <nav class="nav flex-column">
                <a class="nav-link active" href="#">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a class="nav-link" href="#">
                    <i class="fas fa-shopping-cart"></i> Mis Compras
                </a>
                <a class="nav-link" href="#">
                    <i class="fas fa-heart"></i> Favoritos
                </a>
                <a class="nav-link" href="#">
                    <i class="fas fa-cog"></i> Configuración
                </a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center my-4">
                <h2>Dashboard Principal</h2>
                <form method="post" action="/Auth/Logout">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                    </button>
                </form>
            </div>

            <!-- Estadísticas del Chatbot Ecommerce -->
            <div class="row">
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>0</h4>
                                    <p>Pedidos Activos</p>
                                </div>
                                <i class="fas fa-shopping-bag fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>0</h4>
                                    <p>Productos Vistos</p>
                                </div>
                                <i class="fas fa-eye fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>0</h4>
                                    <p>Carrito</p>
                                </div>
                                <i class="fas fa-shopping-cart fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3 mb-4">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h4>0</h4>
                                    <p>Mensajes</p>
                                </div>
                                <i class="fas fa-comments fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Próximas Funcionalidades -->
            <div class="card">
                <div class="card-header">
                    <h5>Próximas Funcionalidades del Chatbot</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <i class="fas fa-robot text-primary me-2"></i>
                            Chatbot de Compras Integrado
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-box text-success me-2"></i>
                            Catálogo de Productos
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-credit-card text-warning me-2"></i>
                            Sistema de Pagos
                        </li>
                        <li class="list-group-item">
                            <i class="fas fa-shipping-fast text-info me-2"></i>
                            Seguimiento de Pedidos
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .sidebar {
        min-height: 100vh;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
    }
    
    .nav-link {
        color: #333;
        padding: 10px 15px;
        margin: 2px 0;
        border-radius: 5px;
    }
    
    .nav-link:hover, .nav-link.active {
        background-color: #007bff;
        color: white;
    }
</style>