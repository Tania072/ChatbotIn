@model Prueba2.Controllers.RegisterViewModel
@{
    ViewData["Title"] = "Registrar Administrador";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h2>Registrar Nuevo Administrador</h2>
        <p class="text-muted">Crear cuenta de administrador para el panel de control</p>
        
        <div class="card">
            <div class="card-body">
                <!-- Botón Google -->
                <a href="/Auth/GoogleLogin" class="btn btn-outline-danger w-100 mb-3">
                    <i class="fab fa-google"></i> Registrarse con Google
                </a>
                
                <hr>
                
                <!-- Formulario tradicional -->
                <form asp-action="Register" method="post">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-group mb-3">
                        <label asp-for="Nombre"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre completo del administrador" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="email@administrador.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Telefono"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="+503 1234 5678" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña segura" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label asp-for="ConfirmPassword"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirmar contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-success w-100">
                        <i class="fas fa-user-shield"></i> Registrar Administrador
                    </button>
                </form>
                
                <div class="text-center mt-3">
                    <a href="/Auth/Login">¿Ya tienes cuenta? Iniciar Sesión</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}